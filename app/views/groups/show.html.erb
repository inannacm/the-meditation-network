<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.2)), url('<%= cl_image_path @group.photo.key, crop: :fill %>');">
  <div class="container">
    <h1 style= "font-size: 40px"><%= @group.name %> </h1>
    <br>
  </div>
</div>

<div class="all-info">

  <div class="small-div">

    <div class="group-info">

        <p>Who are we?: <%= @group.content %></p>
        <p>Style: <%= @group.style %></p>
        <p>Structure: <%= @group.structure %></p>
        <p>Group host: <%= @group.user.first_name %></p>

    </div>



      <div
        id="map"
        style="width: 100%;
        height: 400px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
       ></div>

      <div class="group-reviews">
        <% @group.reviews.each do |review| %>
        <%= review.user.first_name %>
        <% end %>

      </div>


<%= link_to "Edit", edit_group_path(@group), class: 'btn btn-primary'%>

<%= link_to "Book a session", new_group_booking_path(@group), class: 'btn btn-primary'%>

<%= link_to "Add a review", new_group_review_path(@group), class: 'btn btn-primary'%>

</div>

</div>
