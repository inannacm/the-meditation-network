<h1 class="text-center">Rate your experience with <%= @group.name %></h1>
<br>

<br>
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for [@group, @review] do |f| %>
        <%= f.input :content, as: :text, label: "Leave your review below" %>
        <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
        <%= f.submit "Submit Review", class: "btn btn-primary m-3" %>
      <% end %>
    </div>
  </div>
</div>
